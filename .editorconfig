# EditorConfig helps maintain consistent coding styles for DOGLC Digital Wallet
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.{ps1,psm1}]
indent_size = 4
end_of_line = crlf

[*.{toml,ini}]
indent_size = 2

[*.{html,css}]
indent_size = 2
max_line_length = 120

[Makefile]
indent_style = tab

[*.{bat,cmd}]
end_of_line = crlf
indent_size = 4
